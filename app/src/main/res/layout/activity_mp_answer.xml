<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="#40465C">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write a Response"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <!--<Spinner-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:background="@drawable/spinner_background">-->

    <!--</Spinner>-->

    <!--<Spinner-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:background="@drawable/spinner_background">-->

    <!--</Spinner>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="
        Add Detail of complain...
"
        android:background="@drawable/round_border"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:textSize="15dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Add Attachment"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/camera"
        android:layout_toRightOf="@+id/attach"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dashed_border"
        android:src="@drawable/ic_camera_alt_black_24dp"/>


    <Button
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="25dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:text="Upload"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:background="@drawable/round_corner_button_signup_withgradient"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Upload any pdf file"
                android:textColor="#fff"
                android:textSize="18dp"/>



            <Button
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="25dp"
                android:text="Upload"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/round_corner_button_signup_withgradient"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit "
        android:textStyle="normal"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/round_gender_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>